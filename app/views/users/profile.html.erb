<div id="graphs" class="row graphs">
  <div id="graph" class="col-sm-6 col-xs-12 loading"></div>
  <div id="pie" class="col-sm-4 col-xs-12 loading"></div>
</div>

<div>
  <form class="new-bill" action="/api/bills" method="post">
    <span class="row"><input type="text" class="text-field col-sm-6 col-xs-12" name="bill[name]" placeholder="Name"></span>
    <span class="row"><input type="text" class="text-field datepicker col-sm-6 col-xs-12" name="bill[due_date]" placeholder="Due Date"></span>
    <span class="row"><input type="text" class="text-field col-sm-6 col-xs-12" name="bill[amount]" placeholder="Amount"></span>
    <span class="row"><input type="submit" value="New Bill" class="button btn btn-default"></span>
  </form>
</div>

<div class="bills-table">
  <table class='table table-hover'>
    <thead>
      <th>Name</th>
      <th>Due Date</th>
      <th>Amount</th>
      <!-- <th>User ID</th> -->
      <th>Paid it?</th>
    </thead>
    <tbody class='bills'>
    </tbody>
  </table>
</div>
