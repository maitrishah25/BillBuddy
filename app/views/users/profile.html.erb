<input type="hidden" id="api-token" value="<%= @user.token %>">
<header class="header row">
<h3 class="welcome col-xs-11">Welcome Back <%= @user.username %> </h3>

<%= button_to "Log Out", '/sessions', method: :delete %>
</header>

<div>
  <form class="new-bill" action="/api/bills" method="post">
    <span class="row"><input type="text" class="text-field col-xs-6" name="bill[name]" placeholder="Name"></span>
    <span class="row"><input type="text" class="text-field datepicker col-xs-6" name="bill[due_date]" placeholder="Due Date"></span>
    <span class="row"><input type="text" class="text-field col-xs-6" name="bill[amount]" placeholder="Amount"></span>
    <span class="row"><input type="submit" value="New Bill" class="button btn btn-default"></span>
  </form>
</div>

<div class="bills-table">
  <table class='table table-hover'>
    <thead>
      <th>Name</th>
      <th>Due Date</th>
      <th>Amount</th>
      <!-- <th>User ID</th> -->
      <th>Paid it?</th>
    </thead>
    <tbody class='bills'>
    </tbody>
  </table>
</div>

<%= javascript_include_tag 'users'%>
