<input type="hidden" id="api-token" value="<%= @user.token %>">
<header class="header row">
<h3 class="welcome col-xs-11">Welcome Back <%= @user.username %> </h3>

<%= button_to "Log Out", '/sessions', method: :delete %>
</header>

<form class="new-bill" action="/api/bills" method="post">
  <input type="text" name="bill[name]" placeholder="Name">
  <input type="text" class="datepicker" name="bill[due_date]" placeholder="Due Date">
  <input type="text" name="bill[amount]" placeholder="Amount">
  <input type="submit" value="New Bill" class="button">
</form>

<div class="bills-table">
  <table class='table table-striped'>
    <thead>
      <th>Name</th>
      <th>Due Date</th>
      <th>Amount</th>
      <!-- <th>User ID</th> -->
      <th>Paid it?</th>
    </thead>
    <tbody class='bills'>
    </tbody>
  </table>
</div>

<%= javascript_include_tag 'users'%>
